#include<bits/stdc++.h>
using namespace std;
using ll =long long int;

int main(){
    int tt;
    cin>>tt;
    while(tt--){
        ll n;
        cin>>n;
        vector<ll>a(n);
        ll sum=0;
        ll ct=0;
        for(ll i=0;i<n;i++){
            cin>>a[i];
            sum+=a[i];
            if(a[i]%2==1) ct++;
        }
       if(ct==0||ct==n) cout<<*max_element(a.begin(),a.end())<<endl;
       else cout<<sum-ct+1<<endl;
    }
}
