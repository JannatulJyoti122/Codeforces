#include<bits/stdc++.h>
using namespace std;
using ll=long long int;
int main(){
    int tt;
    cin>>tt;

    while(tt--){
        int n;
        cin>>n;
        if(n%2==1){
            for(int i=1;i<n;i+=2) cout<<-1<<" "<<3<<" ";
            cout<<-1<<endl;
            continue;
        }
        n-=2;
        for(int i=1;i<n;i+=2) cout<<-1<<" "<<3<<" ";
        cout<<-1<<" "<<2<<endl;
    }
}
