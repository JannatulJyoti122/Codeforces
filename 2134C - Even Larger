#include<bits/stdc++.h>
using namespace std;
using ll =long long int;
int main(){
    int tt;
    cin>>tt;
    while(tt--){
        ll n;
        cin>>n;
        ll a[n];
        for(ll i=0;i<n;i++){
            cin>>a[i];
        }
        //vector<ll>v(n+1);
        ll ans=0;
        for(ll i=0;i<n;i+=2){
            ll mn=a[i];
            if(i-2>=0){
                mn=min(mn,a[i-1]-a[i-2]);
            }
            if(i+1<n) mn=min(mn,a[i+1]);
            ans+=a[i]-mn;
            a[i]=mn;
        }
        cout<<ans<<endl;
    }
}
