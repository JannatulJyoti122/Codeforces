#include<bits/stdc++.h>
#include <ext/pb_ds/assoc_container.hpp>
using namespace __gnu_pbds;
using namespace std;
typedef tree<int, null_type, less<int>, rb_tree_tag,
            tree_order_statistics_node_update>
    ordered_set;
#define ll long long  int
int main(){
    ll tt;
    tt=1;
    cin>>tt;
    while(tt--){
        ll n,k;
        cin>>n>>k;
        ll t=0;
        while(n>1){
            n-=(k-1);
            t++;
        }
        cout<<t<<endl;
    }
}
