#include<bits/stdc++.h>
using namespace std;
using ll=long long int;
int main(){
    int tt;
    cin>>tt;
    while(tt--){
        int n;
        cin>>n;
        vector<int>v;
        v.push_back(-2);
        for(int i=0;i<n;i++){
            int x;
            cin>>x;
            if(v.back()!=x) v.push_back(x);
        }
        int pp=v.size();
        pair<int,int>p[pp];
        for(int i=1;i<v.size();i++) {
            p[i].first=v[i];
            p[i].second=i;
        }
        sort(p,p+pp);
        vector<int>vis(pp+2,0);
        int ct=0;
        for(int i=pp-1;i>=1;i--){
            int ind=p[i].second;
            if(vis[ind-1]==0&&vis[ind+1]==0) ct++;
            vis[ind]=1;
        }
        cout<<ct<<endl;
    }
}

