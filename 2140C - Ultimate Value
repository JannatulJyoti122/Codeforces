#include<bits/stdc++.h>
using namespace std;
using ll =long long int;
int main(){
    int tt;
    cin>>tt;
    while(tt--){
        ll n;
        cin>>n;
        ll ans=0;
        ll a[n];
        for(ll i=0;i<n;i++){
            cin>>a[i];
            if(i%2) ans-=a[i];
            else ans+=a[i];
        }
        ll init=ans;
        for(ll i=0;i<n;i++) ans=max(ans,init+i-(i%2));
        ll mn_even=LLONG_MAX/2; ll mn_odd=LLONG_MAX/2;
        for(ll i=0;i<n;i++){
            if(i%2){
                ans=max(ans,init+i+a[i]+a[i]-mn_even);
                mn_odd=min(mn_odd,i-a[i]-a[i]);
            }
            else{
                ans=max(ans,init+i-a[i]-a[i]-mn_odd);
                mn_even=min(mn_even,i+a[i]+a[i]);
            }
        }
        cout<<ans<<endl;
    }
}
