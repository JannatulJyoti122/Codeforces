#include<bits/stdc++.h>
using namespace std;
using ll =long long int;
int main(){
    int tt;
    cin>>tt;
    while(tt--){
        ll n;
        cin>>n;
        ll a[n];
        map<ll,vector<ll>>f;
        for(ll i=0;i<n;i++){
            cin>>a[i];
            f[a[i]].push_back(i);
        }
        bool flag=true;
        for(auto it=f.begin();it!=f.end();it++){
            if(it->second.size()%it->first!=0){
                flag=false;
                break;
            }
        }
        if(flag==false) {
            cout<<-1<<endl;
            continue;
        }
        ll num=1;
        vector<ll>v(n,0);
        for(ll i=0;i<n;i++){
            ll freq=f[a[i]].size();
            if(freq==0) continue;
            ll val=a[i];
            for(ll j=1;j<=freq;j+=val){
                for(ll k=j-1;k<j-1+val;k++){
                    v[f[val][k]]=num;
                }
                num++;
                f[val].clear();
            }
        }
        for(ll i=0;i<n;i++) cout<<v[i]<<" "; cout<<endl;
    }
}
