#include<bits/stdc++.h>
using namespace std;
using ll=long long int;
int main(){
    int tt;
    cin>>tt;

    while(tt--){
        int n;
        cin>>n;
        int a[n],b[n];
        for(int i=0;i<n;i++) cin>>a[i];
        for(int i=0;i<n;i++) cin>>b[i];
        int tot=1;
        for(int i=0;i<n;i++){
            tot+=max(0,a[i]-b[i]);
        }
        cout<<tot<<endl;
    }
}
