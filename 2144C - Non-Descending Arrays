#include<bits/stdc++.h>
using namespace std;
using ll =long long int;

int main(){
    int tt;
    cin>>tt;
    while(tt--){
        ll mod=998244353;
        ll n;
        cin>>n;
        ll a[n],b[n];
        for(ll i=0;i<n;i++) cin>>a[i];
        for(ll i=0;i<n;i++) cin>>b[i];
        ll ct=1;
        for(ll i=0;i<n;i++){
            if(a[i]>b[i]) swap(a[i],b[i]);
            if(i==0||a[i]>=b[i-1]) ct=(ct*2LL)%mod;
        }
        cout<<ct<<endl;
    }
}
