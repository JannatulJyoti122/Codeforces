#include<bits/stdc++.h>
using namespace std;
using ll =long long int;
int main(){
    int tt;
    cin>>tt;
    while(tt--){
        ll n;
        cin>>n;
        cout<<2*n-1<<endl;
        for(ll i=1;i<n;i++){
            cout<<i<<" "<<1<<" "<<i<<endl;
            cout<<i<<" "<<i+1<<" "<<n<<endl;
        }
        cout<<n<<" "<<1<<" "<<n<<endl;
    }
}
